<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent" android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/lm_send"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="right"
        android:layoutDirection="ltr"
        android:minWidth="50dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/shape_bg_outgoing_bubble">


        <TextView
            android:id="@+id/lm_send_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textDirection="rtl"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="@dimen/dim_20dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:maxWidth="300dp"
            android:minWidth="50dp"
            android:text="TextView"
            android:textColor="#000000"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_gravity="right"
            android:layoutDirection="ltr"
            android:layout_marginRight="20dp"
            android:gravity="bottom"
            android:orientation="horizontal">


            <TextView
                android:id="@+id/lm_send_textView_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="time"
                android:gravity="center"
                android:textSize="8sp" />

            <ImageView
                android:id="@+id/lm_send_imageView_status"
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:layout_weight="1"
                android:layout_marginLeft="3dp"
                app:srcCompat="@drawable/ic_schedule_24px" />
        </LinearLayout>


    </LinearLayout>



    <LinearLayout
        android:id="@+id/lm_receive"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="left"
        android:layoutDirection="ltr"
        android:layout_marginTop="5dp"
        android:minWidth="50dp"
        android:background="@drawable/shape_bg_incoming_bubble">


        <TextView
            android:id="@+id/lm_receive_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textDirection="rtl"
            android:layout_marginLeft="@dimen/dim_20dp"
            android:layout_marginRight="30dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:maxWidth="300dp"
            android:minWidth="50dp"
            android:text="TextView"
            android:textColor="#000000"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_gravity="right"
            android:layoutDirection="ltr"
            android:layout_marginRight="5dp"
            android:gravity="bottom"
            android:orientation="horizontal">


            <TextView
                android:id="@+id/lm_receive_textView_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="time"
                android:gravity="center"
                android:textSize="8sp" />

        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/lm_textView_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/view_shape"
        android:layout_gravity="center"
        android:padding="5dp"
        android:textSize="12sp"
        android:text="TextView" />
</LinearLayout>