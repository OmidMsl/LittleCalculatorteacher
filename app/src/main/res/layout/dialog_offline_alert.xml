<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="250dp"
    android:layout_height="180dp">

    <ImageView
        android:layout_width="80dp"
        android:layout_height="80dp" app:srcCompat="@drawable/offline"
        app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintEnd_toEndOf="parent" app:layout_constraintTop_toTopOf="parent"
        android:layout_marginBottom="8dp" app:layout_constraintBottom_toTopOf="@+id/textView3"/>
    <TextView
        android:text="شما آفلاین هستید !\nروشی برای اتصال به اینترنت انتخاب کنید"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" android:gravity="center"
        android:id="@+id/textView3" app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="8dp" app:layout_constraintBottom_toTopOf="@+id/line"/>
    <View
        android:layout_width="match_parent" android:layout_height="0.5dp"
        android:id="@+id/line" android:layout_marginStart="10dp" android:layout_marginEnd="10dp"
        android:background="#00BCD4" app:layout_constraintBottom_toTopOf="@+id/linearLayout2"/>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" android:id="@+id/linearLayout2">

        <Button
            android:id="@+id/button_turn_on_data"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="5dp"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:text="روشن کردن دیتا" />
        <View
            android:layout_width="0.5dp" android:layout_height="match_parent" android:background="#00BCD4"
            android:layout_marginTop="5dp" android:layout_marginBottom="5dp"/>

        <Button
            android:id="@+id/button_turn_on_wifi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:text="روشن کردن وای فای" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>